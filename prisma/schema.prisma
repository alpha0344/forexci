generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Énumérations pour les types de matériel
enum MaterialType {
  PA      // Pression Auxiliaire
  PP      // Pression permanente
  ALARM   // Alarme
}

model User {
  id                 String   @id @default(uuid())
  email              String   @unique
  passwordHash       String
  fullName           String?  // nom complet de l'utilisateur (optionnel)
  isActive           Boolean  @default(true)
  tokenVersion       Int      @default(0) // pour invalider les sessions existantes si besoin
  resetToken         String?  // token pour réinitialisation mot de passe
  resetTokenExpiry   DateTime? // expiration du token de reset
  lastLoginAt        DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Material {
  id                    String       @id @default(uuid())
  type                  MaterialType // Type de matériel (PA, PP, ALARM)
  validityTime          Int          // Temps avant changement/maintenance de la pièce
  timeBeforeControl     Int          // Temps en jours avant contrôle obligatoire
  timeBeforeReload      Int?         // Temps avant le changement de produit (optionnel)
}
